    "import numpy as np\n",
    "import matplotlib.pyplot as plt\n",
    "from ipywidgets import interact, FloatSlider, Layout\n",
    "from IPython.display import display, clear_output\n",
    "\n",
    "# --- Datos de la Bomba de Referencia (Fijos) ---\n",
    "D_base_default = 6.0  # Diámetro de referencia (pulgadas)\n",
    "N_base_default = 1750.0 # Velocidad de referencia (RPM)\n",
    "Q_base_data = np.array([0, 500, 800, 1000, 1300, 1600])  # Caudal (gpm)\n",
    "H_base_data = np.array([124, 119, 112, 104, 90, 66])    # Altura (ft)\n",
    "Eff_base_data = np.array([0, 54, 64, 68, 70, 67])       # Eficiencia (%)\n",
    "\n",
    "# Configuración inicial para el gráfico\n",
    "plt.rcParams['figure.figsize'] = [10, 8] # Tamaño del gráfico\n",
    "plt.rcParams['figure.dpi'] = 100 # Resolución del gráfico\n",
    "\n",
    "def find_bep(q_data, h_data, eff_data):\n",
    "    \"\"\"Encuentra el Punto de Mejor Eficiencia (BEP) a partir de los datos de la curva.\"\"\"\n",
    "    if len(eff_data) == 0:\n",
    "        return None, None, None\n",
    "    \n",
    "    max_eff_idx = np.argmax(eff_data)\n",
    "    q_bep = q_data[max_eff_idx]\n",
    "    h_bep = h_data[max_eff_idx]\n",
    "    eff_bep = eff_data[max_eff_idx]\n",
    "    return q_bep, h_bep, eff_bep\n",
    "\n",
    "def plot_pump_curves(D2, N2):\n",
    "    \"\"\"\n",
    "    Calcula y grafica las curvas de la bomba para los parámetros dados (D2, N2).\n",
    "    \"\"\"\n",
    "    clear_output(wait=True) # Limpiar la salida anterior para actualizar el gráfico\n",
    "\n",
    "    if D2 <= 0 or N2 <= 0:\n",
    "        print(\"Error: Diámetro (D2) y Velocidad (N2) deben ser números positivos.\")\n",
    "        return\n",
    "\n",
    "    # --- Aplicación de las Leyes de Afinidad ---\n",
    "    q_new = Q_base_data * (N2 / N_base_default) * (D2 / D_base_default)**3\n",
    "    h_new = H_base_data * (N2 / N_base_default)**2 * (D2 / D_base_default)**2\n",
    "    eff_new = Eff_base_data  # La eficiencia se mantiene en puntos homólogos\n",
    "\n",
    "    fig, (ax1, ax2) = plt.subplots(2, 1, figsize=(10, 8))\n",
    "    fig.tight_layout(pad=4.0)\n",
    "\n",
    "    # --- Graficar Curva H-Q (Referencia y Nueva) ---\n",
    "    ax1.plot(Q_base_data, H_base_data, 'bo-', label=f'Ref: D1={D_base_default}\", N1={N_base_default} RPM')\n",
    "    ax1.plot(q_new, h_new, 'ro-', label=f'Nueva: D2={D2}\", N2={N2} RPM')\n",
    "\n",
    "    # BEP para ambas bombas en la curva H-Q\n",
    "    q_bep_base, h_bep_base, _ = find_bep(Q_base_data, H_base_data, Eff_base_data)\n",
    "    q_bep_new, h_bep_new, _ = find_bep(q_new, h_new, eff_new)\n",
    "\n",
    "    if q_bep_base is not None:\n",
    "        ax1.plot(q_bep_base, h_bep_base, 'k*', markersize=10, label=f'BEP Ref: Q={q_bep_base:.1f}')\n",
    "    if q_bep_new is not None:\n",
    "        ax1.plot(q_bep_new, h_bep_new, 'ms', markersize=8, label=f'BEP Nueva: Q={q_bep_new:.1f}')\n",
    "\n",
    "    ax1.set_xlabel(\"Caudal (Q, gpm)\")\n",
    "    ax1.set_ylabel(\"Altura (H, ft)\")\n",
    "    ax1.set_title(\"Curva Carga vs. Caudal (H-Q)\")\n",
    "    ax1.legend(loc='best')\n",
    "    ax1.grid(True)\n",
    "\n",
    "    # --- Graficar Curva Eff-Q (Referencia y Nueva) ---\n",
    "    ax2.plot(Q_base_data, Eff_base_data, 'go-', label=f'Ref: D1={D_base_default}\", N1={N_base_default} RPM')\n",
    "    ax2.plot(q_new, eff_new, 'co-', label=f'Nueva: D2={D2}\", N2={N2} RPM')\n",
    "\n",
    "    # BEP para ambas bombas en la curva de eficiencia\n",
    "    if q_bep_base is not None:\n",
    "        ax2.plot(q_bep_base, Eff_base_data[np.argmax(Eff_base_data)], 'k*', markersize=10, label=f'BEP Ref: Eff={eff_bep_base:.1f}%')\n",
    "    if q_bep_new is not None:\n",
    "        ax2.plot(q_bep_new, eff_new[np.argmax(eff_new)], 'ms', markersize=8, label=f'BEP Nueva: Eff={eff_bep_new:.1f}%')\n",
    "\n",
    "    ax2.set_xlabel(\"Caudal (Q, gpm)\")\n",
    "    ax2.set_ylabel(\"Eficiencia (Eff, %)\")\n",
    "    ax2.set_title(\"Curva Eficiencia vs. Caudal (Eff-Q)\")\n",
    "    ax2.legend(loc='best')\n",
    "    ax2.grid(True)\n",
    "\n",
    "    plt.show()\n",
    "\n",
    "# --- Creación de los Sliders Interactivos ---\n",
    "# Se definen los rangos y valores iniciales para cada parámetro.\n",
    "interact(plot_pump_curves,\n",
    "         D2=FloatSlider(min=4.0, max=10.0, step=0.1, value=8.0, description='Diámetro (D2):', layout=Layout(width='auto')),\n",
    "         N2=FloatSlider(min=1000.0, max=2000.0, step=10.0, value=1450.0, description='Velocidad (N2):', layout=Layout(width='auto'))\n",
    "        );"
   ]
  }
